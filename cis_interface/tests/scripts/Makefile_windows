IDIR = .
CC = cl.exe
LINK = link.exe
CFLAGS = /I$(IDIR) $(CISCCFLAGS)

ODIR = .
LDIR = .

LIBS = $(CISLDFLAGS)

_DEPS = hellofunc.h
DEPS = $(patsubst %,$(IDIR)\\%,$(_DEPS))

_OBJ = gcc_model.o hellofunc.o
OBJ = $(patsubst %,$(ODIR)\\%,$(_OBJ))

.PHONY: all
all: gcc_model

$(ODIR)\%.o: %.c $(DEPS)
	$(CC) /c %< /Fo$@ $(CFLAGS)

gcc_model: $(OBJ)
	$(LINK) /OUT:$@.exe $^ $(LIBS)

clean:
	rm -f $(ODIR)\\\*.o \*~ gcc_model.exe $(IDIR)\*\~ 
